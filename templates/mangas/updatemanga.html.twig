{% extends 'base.html.twig' %}

{% block body %}
    <div class="home-content">
        <div class="info-profil">
            <h2>Edition manga</h2>
            <ul>
                <li>{{ app.user.username }}</li>
                <li>{{ app.user.name }}</li>
                <li>{{ app.user.lastname }}</li>
                <li>{{ app.user.email }}</li>
            </ul>
        </div>
        <div class="calendar-profil">
            <h2>Edition Donn√©es Mangas</h2>
            <div class="form_mangas">
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.author) }}
                <div class="select-cover"> {{ form_row(form.imageFile) }} </div>
                {{ form_row(form.synopsis) }}
                {{ form_row(form.genre) }}
                {{ form_row(form.updatedAt) }}
                {{ form_row(form.availability) }}
                <button type="submit">Register!</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}